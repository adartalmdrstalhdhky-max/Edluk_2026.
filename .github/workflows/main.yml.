name: Global Edluk Build
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.19.0'

      - name: Auto-Create Project
        run: |
          # إنشاء هيكل التطبيق الحديث بهوية "أدلك"
          flutter create --project-name edluk_app --org com.essam.edluk .
          
          # إضافة المكتبات التي نحتاجها لمشروعنا ليعمل
          flutter pub add hive hive_flutter path_provider http
          
      - name: Build Global APK
        run: |
          flutter build apk --release
          
      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: edluk-clean-apk
          path: build/app/outputs/flutter-apk/app-release.apk
          
